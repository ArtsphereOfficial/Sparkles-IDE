<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/coordinator"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

   	<LinearLayout
		android:id="@+id/content_dialog"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:paddingBottom="15dp"
		android:background="@color/md_theme_surfaceContainer"
		android:gravity="center_horizontal|center_vertical"
		android:orientation="vertical">
		<ImageView
			android:id="@+id/dialog_icon"
			android:focusable="false"
			android:layout_width="30dp"
			android:layout_height="30dp"
			android:layout_marginTop="20dp"
			android:src="@drawable/ic_fab_play"
			android:scaleType="fitCenter" />
		<TextView
			android:id="@+id/dialog_text"
			android:focusable="false"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="40dp"
			android:layout_marginTop="20dp"
			android:layout_marginRight="40dp"
			android:layout_marginBottom="20dp"
			android:gravity="center_horizontal|center_vertical"
			android:text="Choose editor Theme"
			android:textSize="20sp"
			 />
        <RadioGroup
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        >
   <RadioButton
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="Eclipse"
        android:id="@+id/app_eclipse"/>
   <RadioButton
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="Github"
            android:id="@+id/app_github"/> 
     <RadioButton
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="Dracula"
            android:id="@+id/app_Darcula"/>     
     <RadioButton
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="VsCode2019"
            android:id="@+id/app_vscode"/>    
        
   <RadioButton
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="NotepadXX"
            android:id="@+id/app_notepad"/>
        </RadioGroup>
		<LinearLayout
			android:id="@+id/button_allow"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginLeft="20dp"
			android:layout_marginRight="20dp"
			android:layout_marginBottom="2dp"
			android:padding="10dp"
			android:gravity="center_horizontal|center_vertical"
			android:orientation="horizontal">
			<TextView
				android:id="@+id/button1_text"
				android:focusable="false"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:padding="8dp"
				android:text="@android:string/ok"
				android:textSize="12sp"
				android:textStyle="bold"
				/>
		</LinearLayout>
		<LinearLayout
			android:id="@+id/button_deny"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginLeft="20dp"
			android:layout_marginTop="2dp"
			android:layout_marginRight="20dp"
			android:layout_marginBottom="10dp"
			android:padding="10dp"
			android:gravity="center_horizontal|center_vertical"
			android:orientation="horizontal">
			<TextView
				android:id="@+id/button2_text"
				android:focusable="false"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:padding="8dp"
				android:text="@android:string/cancel"
				android:textSize="12sp"
				android:textStyle="bold" />
		</LinearLayout>
	</LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
